<h1>{{name}}</h1>

<div class="row">
  <div class="col-md-6">
    <div class="well well-lg">
      <h3>Players</h3><hr>

      {{#each player}}
        <li><h4>{{#link-to 'player' this.id}}{{playerName}}{{/link-to}}</h4></li>
      {{/each}}
    </div>
  </div>

  <div class="col-md-6">
    <div class="well well-lg">
      <h1>{{#link-to 'newPlayer' this.id}}<span class="btn btn-primary btn-block">Add a Player</span>{{/link-to}}</h1>
      {{outlet}}
    </div>
  </div>
</div>
