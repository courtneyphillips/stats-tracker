<div class="container">
  <div class="row">

    <div class="col-md-6">
      <h1>Teams</h1>
      <ul>
        {{#each}}
         <li>{{#link-to 'team' this.id}}{{name}}{{/link-to}}</li>
        {{/each}}
      </ul>
    </div>

      <div class="col-md-6">
        <h1>Add a Team:</h1>
        <form>
          <div class="form-group">
            <label for="name">Name</label>
            {{input id="name" class="form-control" value=name}}
          </div>
          <button class="btn btn-primary" {{action "save"}}> Save Team</button>
        </form>
      </div>

    </div>
  </div>
