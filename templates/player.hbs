
<h1>{{playerName}}</h1>
<div class="row">
  <div class="col-md-6">
    <div class="well well-lg">
      <h4>Shots:</h4>
      <hr>
      <ol>
      {{#each stat}}
        {{#if made}}
          <li>Made</li>
        {{else}}
          <li> Miss</li>
        {{/if}}
      {{/each}}
    </ol>
    </div>
  </div>
  <!-- trying to use a computed property function-->


  <div class="col-md-6">
    <div class="well well-lg">
      <h4>Current Shooting Percentage:</h4>
      <hr>
      <h2><p class="text-center">{{shootingPercentage}}</p></h2>
    </div>
  </div>


  <div class="col-md-6">
    <div class="well well-lg">
      {{outlet}}
      <br><br>
        <p>{{#link-to "new-stat" this.id}}<span class="btn btn-primary btn-block"> Add A New Stat</span> {{/link-to}}</p>




        </div>
      </div>
</div>
